{

	"name": "AutoShoping",

	"description": "AutoShopping",

	"version": "2.0",

	"permissions": [
		"http://*/", "https://*/"
	],

	"background": {


		"scripts": ["background.js", "main_script.js"],

		"persistent": false

	},

	"content_scripts": [{
		"matches": ["http://store.steampowered.com/*", "https://store.steampowered.com/*"],
		"js": ["main_script.js"],
		"run_at": "document_start",
		"all_frames": true
	}],
	"browser_action": {

		"default_title": "AutoShopping",
		"default_popup": "popup.html"
	},

	"manifest_version": 2

}