{
  "description": "自动查询京东商品佣金，商品好评率，qq群：426387850",
  "icons": {
    "48": "icon48.png"
  },
  "content_scripts": [{
    "matches": ["http://*.jd.com/*", "https://*.jd.com/*"],
    "js": ["jquery.js", "content.js"],
    "all_frames": true,
    "run_at": "document_end" //dom加载完再引入脚本
  }],
  "background": {
    "persistent": true,
    /*"scripts": ["jquery.js", "bg.js"],*/
    "page": "bg.html"
  },
  "browser_action": {
    "default_title": "京东助手" // optional; shown in tooltip
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs", "background",
    "*://*/*",
    "notifications",
    "webRequestBlocking", //注意这里一定要写
    "webRequest" //注意这里一定要写
  ],
  "manifest_version": 2,
  "name": "京东助手",
  "version": "1"
}
